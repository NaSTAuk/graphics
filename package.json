{
  "name": "@nastauk/graphics",
  "version": "0.0.1",
  "description": "A monorepo for html based graphics",
  "main": "index.js",
  "repository": "git@github.com:NaSTAuk/graphics.git",
  "author": "NaSTAuk <contact@nasta.tv>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*/*"
  ],
  "devDependencies": {
    "@ts-tools/build": "^0.1.10",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.7",
    "coveralls": "^3.0.3",
    "jest": "^24.7.1",
    "lerna": "^3.13.4",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream --parallel",
    "test": "yarn test:lint && yarn test:coverage",
    "test:lint": "tslint -p tsconfig.test.json",
    "test:coverage": "jest --coverage",
    "clean": "git clean -xfd",
    "start": "yarn workspace @nastauk/graphics-core start",
    "ci:coveralls": "jest --coverage && cat ./tests/coverage/lcov.info | coveralls"
  }
}
