{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
  },
  "paths": {
    "@nastauk/graphics-*": ["packages/core/*/src"], // e.g. * matches with logger, so "@nastauk/graphics-logger": ["packages/core/logger/src"]
    "*": ["node_modules", "packages"]
  },
  "include": [],
  "exclude": ["**/*.story.*", "**/*.test.*", "dist"],
}